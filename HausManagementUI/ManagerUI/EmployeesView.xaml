<UserControl x:Class="HausManagementUI.EmployeesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HausManagementUI"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </UserControl.Resources>

    <Grid>
        <TabControl x:Name="tbEmployees"
                    Background="{StaticResource BackgroundBrush}"
                    BorderThickness="0">

            <!--#region Employees Tab-->
            <TabItem Header="{materialDesign:PackIcon Kind=Account, Size=24}"
                     Style="{StaticResource MaterialDesignNavigationRailTabItem}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="6*" />
                    </Grid.RowDefinitions>

                    <ToolBarTray VerticalAlignment="Center"
                                 HorizontalAlignment="Stretch">
                        <ToolBar Style="{DynamicResource MaterialDesignToolBar}"
                                 ClipToBounds="False">
                            <Button x:Name="btnRefreshView"
                                    Content="{materialDesign:PackIcon Kind=AccountReactivate}"
                                    Click="btnRefreshEmployees_Click" />
                            <Button x:Name="btnSwitchToAddEmployee"
                                    Content="{materialDesign:PackIcon Kind=AccountAdd}"
                                    Click="btnSwitchToAddEmployee_Click" />
                            <Button x:Name="btnDeleteEmployees"
                                    Content="{materialDesign:PackIcon Kind=AccountMinus}"
                                    Click="btnDeleteEmployees_Click" />
                            <Button Content="{materialDesign:PackIcon Kind=AccountQuestion}" />
                        </ToolBar>
                    </ToolBarTray>

                    <DataGrid x:Name="grdEmployees"
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserResizeRows="False"
                              IsManipulationEnabled="False"
                              SelectionMode="Extended">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Select">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox x:Name="cbEmployeeSelect"
                                                  Checked="cbEmployeeSelect_Checked"
                                                  Unchecked="cbEmployeeSelect_Unchecked" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>

                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Id"
                                                Binding="{Binding Path=Id, Mode=OneWay}" />
                            <DataGridTextColumn Header="Name"
                                                Binding="{Binding Path=Name, Mode=OneWay}" />
                            <DataGridTextColumn Header="Job"
                                                Binding="{Binding Path=Job, Mode=OneWay}" />
                            <DataGridTextColumn Header="Assigned Item"
                                                Binding="{Binding Path=AssignedItem, Mode=OneWay}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <!--#endregion-->

            <!--#region Clocks Tab-->
            <TabItem Header="{materialDesign:PackIcon Kind=Clock, Size=24}"
                     Style="{StaticResource MaterialDesignNavigationRailTabItem}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="6*" />
                        <RowDefinition Height="0.5*" />
                    </Grid.RowDefinitions>

                    <!--Toolbox-->
                    <ToolBarTray VerticalAlignment="Center"
                                 HorizontalAlignment="Stretch"
                                 Grid.Column="0"
                                 Grid.ColumnSpan="2">
                        <ToolBar Style="{DynamicResource MaterialDesignToolBar}"
                                 ClipToBounds="False">
                            <materialDesign:PackIcon Kind="Search"
                                                     VerticalAlignment="Center"
                                                     HorizontalAlignment="Center"
                                                     Margin="10" />
                            <ComboBox x:Name="cbEmployeeSearch"
                                      materialDesign:HintAssist.Hint="Employee"
                                      materialDesign:TextFieldAssist.HasClearButton="True"
                                      DisplayMemberPath="Name"
                                      SelectedValuePath="Id"
                                      Margin="10" />
                            <ComboBox x:Name="cbMonthSearch"
                                      materialDesign:HintAssist.Hint="Month"
                                      materialDesign:TextFieldAssist.HasClearButton="True"
                                      Margin="10" />
                            <ComboBox x:Name="cbYearSearch"
                                      materialDesign:HintAssist.Hint="Year"
                                      materialDesign:TextFieldAssist.HasClearButton="True"
                                      Margin="10" />
                            <Button x:Name="btnRefreshOrders"
                                    Content="{materialDesign:PackIcon Kind=AccountSearch}"
                                    Click="btnRefreshClocks_Click" />
                        </ToolBar>
                    </ToolBarTray>

                    <!--Clock Records-->

                    <ScrollViewer Grid.Row="1"
                                  Grid.ColumnSpan="2"
                                  VerticalAlignment="Stretch"
                                  HorizontalAlignment="Stretch">
                        <ItemsControl Name="icClockRecords"
                                      Grid.Row="1"
                                      Grid.ColumnSpan="2"
                                      VerticalAlignment="Stretch"
                                      HorizontalAlignment="Stretch">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Expander>
                                        <Expander.Header>
                                            <StackPanel Orientation="Horizontal"
                                                        Grid.Column="1">
                                                <TextBlock Text="{Binding Path=DateTime, StringFormat={}{0:dd/MM/yyyy}}"
                                                           Margin="0,0,10,0"
                                                           FontWeight="Bold"
                                                           VerticalAlignment="Center" />
                                                <TextBlock Text="{Binding Path=TotalWorkingHours, StringFormat={}{0:F1} hours}"
                                                           Margin="0,0,10,0"
                                                           FontWeight="Bold"
                                                           VerticalAlignment="Center" />
                                            </StackPanel>
                                        </Expander.Header>
                                        <DataGrid ItemsSource="{Binding Path=GroupedClockRecords}"
                                                  AutoGenerateColumns="False">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Clocked In"
                                                                    Binding="{Binding Path=ClockedInDisplay, Mode=OneWay}" />
                                                <DataGridTextColumn Header="Clocked Out"
                                                                    Binding="{Binding Path=ClockedOutDisplay, Mode=OneWay}" />
                                                <DataGridTextColumn Header="Total Hours"
                                                                    Binding="{Binding Path=TotalHoursWorked, Mode=OneWay, StringFormat={}{0:F1} hours}" />
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </Expander>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!--Bottom toolbox-->
                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                Margin="10 0 10 0">
                        <TextBlock FontSize="17"
                                   FontWeight="Bold"
                                   Text="Total: " />
                        <TextBlock FontSize="17"
                                   Text="{Binding Path=TotalHoursWorkedInMonth, StringFormat={}{0:F1} hours}" />
                    </StackPanel>
                </Grid>
            </TabItem>
            <!--#endregion-->

            <!--#region Add Employee Tab-->
            <TabItem Header="{materialDesign:PackIcon Kind=AccountAdd, Size=24}"
                     Style="{StaticResource MaterialDesignNavigationRailTabItem}"
                     Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="New Employee"
                               Style="{StaticResource MaterialDesignHeadline3TextBlock}"
                               Grid.Column="0"
                               Grid.ColumnSpan="2"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center" />

                    <TextBox x:Name="txtEmployeeName"
                             Style="{StaticResource MaterialDesignFilledTextBox}"
                             Grid.Row="1"
                             Grid.Column="0"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Center"
                             materialDesign:HintAssist.Hint="Name"
                             Width="150" />

                    <ComboBox x:Name="cbJob"
                              Style="{StaticResource MaterialDesignFilledComboBox}"
                              Grid.Row="1"
                              Grid.Column="1"
                              materialDesign:HintAssist.Hint="Job"
                              Width="256"
                              Height="50">
                        <ComboBoxItem Content="sew" />
                        <ComboBoxItem Content="iron" />
                        <ComboBoxItem Content="qc" />
                    </ComboBox>
                    <Button x:Name="btnCreateEmployee"
                            Content="Add Employee"
                            Grid.ColumnSpan="2"
                            Grid.Column="0"
                            Grid.Row="2"
                            HorizontalAlignment="Center"
                            Click="btnCreateEmployee_Click" />
                </Grid>
            </TabItem>
            <!--#endregion-->
        </TabControl>
    </Grid>
</UserControl>
